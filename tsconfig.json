{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2018"],
    "target": "es2018",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": false,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  // "exclude": [
  //   "node_modules"
  // ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ]
}
